export EDITOR=nano

alias ..="cd .."

BREW=$(brew --prefix)

# brew install bash-completion
[[ -r "${BREW}/etc/profile.d/bash_completion.sh" ]] && . "${BREW}/etc/profile.d/bash_completion.sh"

# brew install git
[[ -r "${BREW}/etc/bash_completion.d/git-prompt.sh" ]] && . "${BREW}/etc/bash_completion.d/git-prompt.sh"

export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWCOLORHINTS=1
export GIT_PS1_SHOWUPSTREAM=git

BOLD=$(tput bold)
RESET=$(tput sgr0)
export PROMPT_COMMAND='__git_ps1 "'"${BOLD}\w${RESET}"'" "\n$ " " [%s]"'
# export PS1="${BOLD}\w${RESET}\n$ "

export CLICOLOR=xterm-color
export LSCOLORS=Exfxcxdxbxegedabagacad

export HISTCONTROL=ignorespace
shopt -s histappend checkwinsize
